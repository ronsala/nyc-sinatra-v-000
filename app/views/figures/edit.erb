<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label><%= @figure.name %><br>
  <label>New Name: </label><input type="text" id="figure_name" name="figure[name]"><br><br>
  <label>Titles: </label>
  <%= @figure.titles%>
  <label>New Title: </label><input type="text" id="figure_title" name="figure[title_ids]"><br>
  <input type="submit" value="submit"><br>
</form>

<a class="button" href="/figures">Landmarks</a>
